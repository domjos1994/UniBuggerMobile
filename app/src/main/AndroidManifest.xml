            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.domjos.unibuggermobile.activities.MainActivity" />
        </activity>
        <activity
            android:name="de.domjos.unibuggermobile.activities.ExportActivity"
