<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.domjos.unitrackermobile.custom.SwipeRefreshDeleteList
        android:id="@+id/lvIssueAttachments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cmdIssueAttachmentAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_file_upload_black_24dp" />
        <ImageButton
            android:id="@+id/cmdIssueAttachmentPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
    </LinearLayout>
</RelativeLayout>