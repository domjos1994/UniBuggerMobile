<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.domjos.unitrackermobile.custom.SwipeRefreshDeleteList
        android:id="@+id/lvIssueAttachments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cmdIssueAttachmentAdd" />

    <ImageButton
        android:id="@+id/cmdIssueAttachmentAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_file_upload_black_24dp" />
</RelativeLayout>